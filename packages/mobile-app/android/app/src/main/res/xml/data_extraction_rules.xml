<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ backup.
   Birthmark credentials should NOT be backed up for security.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive credential data -->
        <exclude domain="sharedpref" path="birthmark_credentials.xml" />
        <exclude domain="database" path="birthmark_database" />
    </cloud-backup>
    <device-transfer>
        <!-- Also exclude from device-to-device transfer -->
        <exclude domain="sharedpref" path="birthmark_credentials.xml" />
        <exclude domain="database" path="birthmark_database" />
    </device-transfer>
</data-extraction-rules>
